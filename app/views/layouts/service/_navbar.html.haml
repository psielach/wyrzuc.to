%body
  %header.main-header
    %a.logo{ href: '/service' }
      %b> Panel
      Admina
    %nav.navbar.navbar-static-top{ role: 'navigation' }
      %a.sidebar-toggle{ href: '#', role: 'button', date: { toggle: 'offcanvas' } }
        %span.sr-only Toggle navigation
      .navbar-custom-menu
        %ul.nav.navbar-nav
          %li.dropdown.user.user-menu
            %a.dropdown-toggle{ href: '#', date: { toggle: 'dropdown' } }
              = image_tag(avatar_path, class: 'user-image')
              %span.hidden-xs= current_admin.full_name
            %ul.dropdown-menu
              %li.user-header
                = image_tag(avatar_path, class: 'img-circle')
                %p
                  = current_admin.full_name
                  %small
                    Data rejestracji: #{l(current_admin.created_at, format: :registration)}
              %li.user-footer
                .pull-left
                  = link_to t('.profile'), edit_service_admin_path, class: 'btn btn-default btn-flat'
                .pull-right
                  = link_to t('buttons.sing_out'), destroy_admin_session_path, method: :delete, class: 'btn btn-default btn-flat'
